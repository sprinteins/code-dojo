{
    "compilerOptions": {
        "outDir": "lib",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "es7",
            "es2017",
            "dom"
        ],
        "inlineSourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDirs": [
            "src"
        ],
        "baseUrl": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/components/*"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.stories.spec.tsx",
        "**/*.stories.tsx",
        "node_modules",
        "build",
        "scripts"
    ]
}