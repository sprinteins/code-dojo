{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "ES2016",
    "lib": [
      "es6",
      "dom",
      "es7"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}